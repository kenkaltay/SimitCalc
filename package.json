{
  "name": "simitcalc",
  "version": "1.0.0",
  "description": "Mac Style Calculator",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kenkaltay/SimitCalc.git"
  },
  "build": {
    "publish": [
      "github"
    ],
    "appId": "com.simitcalc.app",
    "productName": "SimitCalc",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "directories": {
      "output": "dist"
    }
  },
  "keywords": [],
  "author": "User",
  "license": "ISC",
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  }
}